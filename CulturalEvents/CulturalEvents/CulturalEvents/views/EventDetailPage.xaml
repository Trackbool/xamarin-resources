<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalEvents.views.EventDetailPage">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Label Text="{Binding CurrentEvent.Name}" 
                   HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Image Source="{Binding CurrentEvent.ImagePath}" 
                   HorizontalOptions="FillAndExpand"
                   HeightRequest="198" MinimumWidthRequest="88"/>
            <Label Text="{Binding CurrentEvent.Date}" HorizontalOptions="EndAndExpand" />
            <Label Text="{Binding CurrentEvent.Description}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>